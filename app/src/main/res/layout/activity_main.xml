        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/guideline05"
        app:layout_constraintStart_toStartOf="@+id/guideline04"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />
